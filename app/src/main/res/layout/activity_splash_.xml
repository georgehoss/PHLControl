<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ve.first.phl.com.phlcontrol.SplashActivity"
    android:background="@drawable/bg_splash"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="30dp"
         >
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_logo_phl"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/improving_life"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:text="@string/information"
            android:layout_gravity="center"
            android:id="@+id/tv_info"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/you_must_have"
            android:id="@+id/tv_deber"
            android:layout_marginBottom="20dp"
            />


         <Button
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:id="@+id/bt_info"
             android:paddingStart="120dp"
             android:paddingLeft="120dp"
             android:layout_marginEnd="50dp"
             android:layout_marginTop="10dp"
             android:text="@string/more_info"
             android:background="@drawable/ic_bt_s1"
             android:textColor="@color/blanco"
             android:layout_marginRight="50dp"
             tools:ignore="RtlSymmetry" />

         <Button
             android:id="@+id/bt_accept"
             android:layout_marginTop="30dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="100dp"
             android:layout_marginLeft="100dp"
             android:background="@drawable/ic_bt_right"
             android:paddingStart="10dp"
             android:paddingLeft="10dp"
             android:paddingEnd="120dp"
             android:paddingRight="120dp"
             android:text="@string/accept"
             android:textColor="@android:color/white"
             tools:ignore="RtlSymmetry" />


         <Button
             android:layout_marginTop="30dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="100dp"
             android:layout_marginLeft="100dp"
             android:background="@drawable/ic_bt_right"
             android:paddingStart="10dp"
             android:paddingLeft="10dp"
             android:paddingEnd="120dp"
             android:paddingRight="120dp"
             android:text="@string/to_continue"
             android:id="@+id/bt_permisions"
             android:visibility="gone"
             android:textColor="@android:color/white"
             tools:ignore="RtlSymmetry" />



     </LinearLayout>


</ScrollView>
