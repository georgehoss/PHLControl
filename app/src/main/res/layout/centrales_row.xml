<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangulo_amarillo_redondeado"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="10dp"
    >
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/key"
        android:id="@+id/btn_key"
        android:layout_marginRight="30dp"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_central"
            android:hint="Nombre"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_numero"
            android:hint="04245931384"
            android:textSize="10sp"
            android:textColor="@color/negro"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/boton_amarillo"
        android:src="@drawable/pencil"
        android:id="@+id/btn_edit"
        android:layout_marginRight="5dp"
        />

    <ImageButton
        android:layout_weight="1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/boton_amarillo"
        android:src="@drawable/delete"
        android:id="@+id/btn_delete"
        />
</LinearLayout>


</LinearLayout>